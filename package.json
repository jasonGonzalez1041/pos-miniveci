{
  "name": "pos-miniveci",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run build:worker && node scripts/dev-server.js",
    "dev:next": "npm run build:worker && next dev",
    "build": "npm run build:worker && next build", 
    "build:worker": "node scripts/compile-worker-simple.js",
    "postbuild": "cp public/_headers out/_headers 2>/dev/null || copy public\\_headers out\\_headers >NUL 2>&1 || true",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "build:cf": "next build",
    "pages:deploy": "npx wrangler pages deploy out --project-name=pos-miniveci",
    "preview": "npx wrangler pages dev out --port 3001",
    "verify:cf": "ts-node scripts/verify-cloudflare-deployment.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@sqlite.org/sqlite-wasm": "^3.51.0-build1",
    "@types/sql.js": "^1.4.9",
    "@types/sqlite3": "^3.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.553.0",
    "next": "15.0.3",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^2.0.7",
    "sqlite-wasm": "^0.0.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.19.24",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-v8": "^1.0.4",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9",
    "eslint-config-next": "15.0.3",
    "jsdom": "^23.0.1",
    "msw": "^2.0.11",
    "sql.js": "^1.13.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^1.0.4",
    "wrangler": "^3"
  }
}
